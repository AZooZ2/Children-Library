<?php


session_start();
if(isset($_SESSION['password'])){
	
    if($_SESSION['type'] == "user"){
        
        $id = $_SESSION['user_id'];
        
    }elseif($_SESSION['type'] == "admin"){
        
        
        $id = $_SESSION['admin_id'];
        
    }
}


