          <?php


    session_start();

    include('connect.php');  
    


//print_r($_POST);
$email = $_POST['email'];
$password = $_POST['password'];
$hashedPass = sha1($password);

$sql1=$con->prepare("SELECT * FROM admin WHERE 
 email=? AND password=?");
$sql1->execute(array($email,$password));
$row1=$sql1->fetch();
//print_r($row);
$count1=$sql1->rowCount();

$sql2=$con->prepare("SELECT * FROM user WHERE 
 email=? AND password=?");
$sql2->execute(array($email,$password));
$row2=$sql2->fetch();
//print_r($row);
$count2=$sql2->rowCount();

	
//echo "<br>".$count;
if($email != "" && $password != ""){
	
	
if($count1>0){
    
    $sql = $con->prepare("SELECT * FROM admin");
    $sql->execute();
    $rows = $sql->fetchAll();

    foreach($rows as $pat)
    {
        
        if($email == $pat["email"] && $password == $pat["password"])
        {
    
            $_SESSION['admin_id'] = $pat['admin_id'];
			$_SESSION['password'] = $pat['password'];
			$_SESSION['email'] = $pat['email'];
			$_SESSION['type'] = "admin";
            
            header('Location:supervisor/supervisor/books.php');
			
			//echo $_SESSION['name'];
        }
    }
    $con=null;
    //echo "wrong password or email";
	
	
	
   
}
elseif($count2>0){
    
    $sql = $con->prepare("SELECT * FROM user");
    $sql->execute();
    $rows = $sql->fetchAll();

    foreach($rows as $pat)
    {
        
         if($email == $pat["email"] && $password == $pat["password"])
        {
            $_SESSION['user_id'] = $pat['user_id'];
			$_SESSION['name'] = $pat['name'];
			$_SESSION['email'] = $pat['email'];
            $_SESSION['password'] = $pat['password']; 
			$_SESSION['type'] = "user";
             
            header('Location:user/user/profile.php');
			
			//echo $_SESSION['name'];
        }
    }
    $con=null;
    //echo "wrong password or email";
	
	
	
   
}
else{
	
	
	
	 echo '
	 <div class="container" dir="rtl" style="margin-top:80px;color:#000">
		  <div class="alert alert-success role="alert" style="color:#000">
			   البريد الالكتروني أو كلمة المرور غير صحيحة من فضلك أعد المحاولة مرة أخري
		 </div>
	 </div>
	 <section class="login-area ptb-100">
            <div class="container">
                <div class="login-form">
                    <h2 style="font-family: cairo">تسجيل الدخول</h2>

                    <form method="post" action="login-conn.php">
                        <div class="form-group">
                            <label>البريد الالكتروني</label>
                            <input type="email" name="email" class="form-control" placeholder="البريد الالكتروني">
                        </div>

                        <div class="form-group">
                            <label>كلمة المرور</label>
                            <input type="password" name="password" class="form-control" placeholder="كلمة المرور">
                        </div>

                        <div class="row align-items-center" dir="ltr">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="checkme">
                                    <label class="form-check-label" for="checkme">تذكرني</label>
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-6 col-sm-6 lost-your-password">
                                <a style="font-family: cairo" href="reset-password.php" class="lost-your-password">هل نسيت كلمة المرور ؟</a>
                            </div>
                        </div>

                        <button type="submit">تسجيل الدخول</button>
