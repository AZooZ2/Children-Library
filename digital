          <?php


    session_start();
		

    include('connect.php');
    
   $id = $_SESSION['admin'];	
	   
$sql=$con->prepare("SELECT * FROM admin WHERE 
admin_id=?");
$sql->execute(array($id));
$row=$sql->fetch();
//print_r($row);
$count=$sql->rowCount();	
	   
	   
if($count>0){	   
	   
	   
	   
	   

$password = $_POST['password'];
$hashedPass = sha1($password);		
$sql=$con->prepare("SELECT * FROM admin WHERE 
password=?");
$sql->execute(array($password));
$row=$sql->fetch();
//print_r($row);
$count=$sql->rowCount();
	
//echo "<br>".$count;
if($hashedPass != ""){
	
	
if($count>0){
    
    $sql = $con->prepare("SELECT * FROM admin WHERE admin_id != $id");
    $sql->execute();
    $rows = $sql->fetchAll();

    foreach($rows as $pat)
    {
        
        if($password == $pat["password"])
        {
           
            
			echo '<div class="container" dir="rtl" style="margin-top:80px;color:#000">
		  <div class="alert alert-success role="alert" style="color:#000">
			  كلمة المرور هذه مستخدمة من قبل من فضلك أعد المحاولة مرة أخري
		 </div>
	 </div>
     <section class="login-area ptb-100">
            <div class="container">
                <div class="login-form">
                    <h2 style="font-family: cairo">اعادة تعيين كلمة المرور</h2>

                    <form method="post" action="reset-conn1.php">
                        <div class="form-group">
                            <label>كلمة المرور الجديدة</label>
                            <input type="password" name="password" required class="form-control" placeholder="كلمة المرور الجديدة">
                        </div>

                        <button type="submit">اعادة تعيين كلمة المرور</button>
                    </form>

                    <div class="important-text">
                        <p style="font-family: cairo">لا أمتلك حساب ؟ <a href="register.php">تسجيل حساب جديد الان</a></p>
                    </div>
                </div>
            </div>
        </section>';
			
			
			
        }
    }
 
} else{
	
	 
