          <?php


    session_start();

    include('connect.php');
    


//print_r($_POST);
$email = $_POST['email'];	
$sql=$con->prepare("SELECT * FROM admin WHERE 
 email=?");
$sql->execute(array($email));
$row=$sql->fetch();
//print_r($row);
$count=$sql->rowCount();
	
//echo "<br>".$count;
if($email != ""){
	
	
if($count>0){
    
    $sql = $con->prepare("SELECT * FROM admin");
    $sql->execute();
    $rows = $sql->fetchAll();

    foreach($rows as $pat)
    {
        
        if($email == $pat["email"])
        {
           
			$_SESSION['admin'] = $pat['admin_id'];
            $_SESSION['user'] = NULL;
            header('Location:reset_pass.php');
        }
    }
    $con=null;
    //echo "wrong password or email";
	
	
	
   
} else{
	
	
	
	 
	/* Start Doctor */
	
	
$email = $_POST['email'];	
$sql=$con->prepare("SELECT * FROM user WHERE 
 email=?");
$sql->execute(array($email));
$row=$sql->fetch();
//print_r($row);
$count=$sql->rowCount();
	
//echo "<br>".$count;
if($email != ""){
	
	
if($count>0){
    
    $sql = $con->prepare("SELECT * FROM user");
    $sql->execute();
    $rows = $sql->fetchAll();

    foreach($rows as $pat)
    {
        
        if($email == $pat["email"])
        {
           
			$_SESSION['user'] = $pat['user_id'];
            $_SESSION['admin'] = NULL;
            header('Location:reset_pass.php');
        }
    }
    $con=null;
    //echo "wrong password or email";
	
	
	
   
} else{
	
	
	echo '<div class="container" dir="rtl" style="margin-top:80px;color:#000">
		  <div class="alert alert-success role="alert" style="color:#000">
			   البريد الالكتروني خطأ أعد المحاولة مرة أخري.
		 </div>
	 </div>
	<section class="login-area ptb-100">
            <div class="container">
                <div class="login-form">
                    <h2 style="font-family: cairo">اعادة تعيين كلمة المرور</h2>

                    <form method="post" action="reset-conn.php">
                        <div class="form-group">
                            <label>البريد الالكتروني</label>
                            <input type="email" name="email" required class="form-control" placeholder="البريد الالكتروني">
                        </div>

                        <button type="submit">اعادة تعيين كلمة المرور</button>
                    </form>

                    <div class="important-text">
                        <p style="font-family: cairo">لا أمتلك حساب ؟ <a href="register.php">تسجيل حساب جديد الان</a></p>
                    </div>
                </div>
            </div>
        </section>';
	
	
	
	/* End Recep */
	

	
  
	  }}else{
	
	
	/*include('logout.php');
