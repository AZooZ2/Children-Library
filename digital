            $holder_name = $_POST['card_holder'];
            $cvv = $_POST['CCV'];
            $expiration_date = $_POST['expiration_date'];  
              
            $all_total = 0;  
            
            //$sql = $con->prepare("SELECT * FROM cart WHERE customer_id='$id'");
            $sql = $con->prepare("SELECT cart.* , book.price , book.status_buy FROM cart INNER JOIN book ON cart.book_id = book.book_id WHERE cart.user_id='$id'");   
            $sql->execute();
            $rows = $sql->fetchAll();
            $count = $sql->rowCount();
            foreach($rows as $pat){
                
                if($pat['status_buy'] != 1){
                
                  $all_total  = $all_total + $pat['price'];
                    
                }
                
                
            }
              
            $order_date =  date('Y-m-d'); 
              
              
            $sql = "INSERT INTO orders (orderDate , orderStatus , total , user_id) VALUES ('$order_date', 'جاري التجهيز' , '$all_total' , '$id')";

            $con->exec($sql);  
              
              
            $sqlccuu = $con->prepare("SELECT order_id FROM orders ORDER BY order_id DESC LIMIT 1");   
            $sqlccuu->execute();
            $rowshh = $sqlccuu->fetch();
            $countff = $sqlccuu->rowCount();  
            $order_id = $rowshh['order_id'];  
              
              
              
            $sqlcc = $con->prepare("SELECT cart.* , book.price , book.status_buy FROM cart INNER JOIN book ON cart.book_id = book.book_id WHERE cart.user_id='$id'");   
            $sqlcc->execute();
            $rowsh = $sqlcc->fetchAll();
            $countf = $sqlcc->rowCount();
            foreach($rowsh as $pat){
                
                $book_id = $pat['book_id'];
                $price = $pat['price'];
                
                if($pat['status_buy']  != 1) {
                    
                    //$stmt = $con->prepare("UPDATE products SET  quantity = ? WHERE product_id = ?");
                    //$stmt->execute(array($present_quantity , $product_id));
                    
                    $sql = "INSERT INTO order_details (order_id , book_id , price) VALUES ('$order_id', '$book_id' , '$price')";

                    $con->exec($sql);
                    
                    
                }
                
                
            }  
              
              
              
            $sqlcc = $con->prepare("SELECT cart.* , book.price , book.status_buy FROM cart INNER JOIN book ON cart.book_id = book.book_id WHERE cart.user_id='$id'");   
            $sqlcc->execute();
            $rowsh = $sqlcc->fetchAll();
            $countf = $sqlcc->rowCount();
            foreach($rowsh as $pat){
                
                $book_id = $pat['book_id'];
                $price = $pat['price'];
                
                if($pat['status_buy']  != 1) {
                    
                    $stmt = $con->prepare("UPDATE book SET  status_buy = ? WHERE book_id = ?");
                    $stmt->execute(array(1 , $book_id));
                    
                }
                
                
            }  
              
              
              $sql = "INSERT INTO billing (card_number , card_holder_name , CVV , expDate , user_id) VALUES ('$card_number', '$holder_name' , '$cvv' , '$expiration_date' , '$id')";

              $con->exec($sql);
              

                $stmt = $con->prepare("DELETE FROM cart WHERE user_id = :userid");

                $stmt->bindParam(":userid" , $id);

                $stmt->execute();
              
            
                echo '<div class="" dir="rtl" style="margin-top:80px;color:#000">
                      <div class="alert alert-success role="alert" style="color:#000">
                           تم انشاء الطلب بنجاح
                     </div>
                 </div>';  
              
              
              
          }
          
          
        ?> 

